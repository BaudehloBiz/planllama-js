{
  "name": "planllama",
  "version": "1.0.0",
  "description": "A simple and powerful cloud-based job scheduler for Node.js applications. Schedule jobs with cron expressions, process background tasks, and manage worker queues without requiring a database connection.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": ["dist", "README.md", "PROTOCOL.md", "LICENSE", "CHANGELOG.md"],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc",
    "build:esm": "tsc -p tsconfig.esm.json && echo '{\"type\":\"module\"}' > dist/esm/package.json",
    "dev": "tsc --watch",
    "example": "npm run build && node dist/cjs/example.js",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:ci": "jest --coverage --watchAll=false",
    "prepublishOnly": "npm run test && npm run build"
  },
  "keywords": [
    "jobs",
    "queue",
    "scheduler",
    "background",
    "tasks",
    "socket.io",
    "cron",
    "worker",
    "distributed",
    "cloud",
    "serverless",
    "job-queue",
    "websocket",
    "realtime",
    "job-scheduler",
    "background-jobs",
    "task-queue"
  ],
  "author": "PlanLlama Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/BaudehloBiz/planllama-js.git"
  },
  "bugs": {
    "url": "https://github.com/BaudehloBiz/planllama-js/issues"
  },
  "homepage": "https://github.com/BaudehloBiz/planllama-js#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "commonjs",
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@eslint/js": "^9.37.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.0.0",
    "@types/progress": "^2.0.7",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "jest": "^29.7.0",
    "jiti": "^2.6.1",
    "progress": "^2.0.3",
    "ts-jest": "^29.1.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.46.0"
  },
  "dependencies": {
    "socket.io-client": "^4.8.1"
  }
}
